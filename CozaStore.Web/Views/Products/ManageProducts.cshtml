
@{
    ViewData["Title"] = "ManageProducts";
   
}


@model IEnumerable<CozaStore.Core.Entities.Product>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Type</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var product in Model)
        {
             var photoPath = "~/Uploads/" + (product.Image) ?? "niimage.jpg";
        <tr>
            <th scope="row">@product.Id</th>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Category</td>
            <td>@product.Type</td>
            <td>
                <div style="width:100px; height:100px;">
                    <img style="width:100px; height:100px;" src="@photoPath" alt="IMG-PRODUCT" asp-append-version="true">

                </div>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="UpdateProduct" asp-controller="products" asp-route-Id="@product.Id">Update</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="products" asp-route-Id="@product.Id">Delete</a>
            </td>

        </tr>

        }
    </tbody>
</table>

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MobileAdmin"> Back To Admin</a>

</div>