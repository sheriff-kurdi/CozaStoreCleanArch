@model CozaStore.Core.ViewModels.CreateProductVM
@using CozaStore.Core.Enums

@*@{ 
    ViewData["Title"] = "AddProduct";
}*@

<h3>Add Products</h3>
<p>Keep Adding When you finish go to home to see them</p>


<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="products" asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<Category>()">
                    <option value=""> Please Sellect Category </option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<CozaStore.Core.Enums.Type>()">
                    <option value=""> Please Sellect Category </option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="PhotoBinary" class="control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="PhotoBinary" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                    <span asp-validation-for="PhotoBinary" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
